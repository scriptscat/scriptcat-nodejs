{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/types"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "assets",
    "dist",
    "example"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/*.test.ts"
  ]
}